<view>
	<view class="textInput">
		<wux-textarea 
			bind:change="onChange" 
			auto-focus="true" 
			hasCount="true"
			placeholder="小朋友，你是否有很多问号?" 
			rows="10" 
		/>
	</view>
	<view class="option">
		<wux-checkbox-group 
			name="options" 
			value="{{ answerVisible }}" 
			bind:change="onChangeCheckBoxAnswerVisible">
			<wux-checkbox 
				key="1"
				color="positive" 
				title="答案对他人可见" 
				value="1" 
			/>
		</wux-checkbox-group>
	</view>
	<view class="submitButton">
		<wux-button 
			size="default" 
			disabled="{{question === ''}}" 
			bind:click="submitQuestion" 
			full="true" 
			type="positive">
			提问
		</wux-button>
	</view>
</view>